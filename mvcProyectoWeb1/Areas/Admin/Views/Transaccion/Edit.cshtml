@model mvcProyectoWeb1.Models.Transaccion
@{
    ViewData["Title"] = "Editar Transacción";
}
<br />
<h3 class="text-center">Editar Transacción</h3>
<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 Border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductoId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductoId" class="form-control" placeholder="Ingresa el ID del Producto" />
                    <span asp-validation-for="ProductoId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Tipo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Tipo" class="form-control" placeholder="Ingrese el Tipo" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Cantidad"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Cantidad" class="form-control" placeholder="Ingrese la Cantidad" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Fecha"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Fecha" class="form-control" placeholder="Ingrese la Fecha" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">
                        <i class="fa-solid fa-plus"></i>Editar
                    </button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">
                        <i class="fa-solid fa-arrow-left"></i>Volver atrás
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

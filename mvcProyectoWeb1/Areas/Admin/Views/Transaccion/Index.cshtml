@{
    ViewData["Title"] = "Lista de Transacciones";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Transacciones</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Crear Nueva Transacción
            </a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblTransacciones" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Producto ID</th>
                <th>Tipo</th>
                <th>Cantidad</th>
                <th>Fecha</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/Transaccion.js"></script>
}
